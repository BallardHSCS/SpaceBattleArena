    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Client Host",
            "program": "${workspaceRoot}/src/node_midtier.js",
            "cwd": "${workspaceRoot}",
            "outFiles": ["${workspaceRoot}/src/**/*.js"],
            "preLaunchTask": "tsc"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost/",
            "webRoot": "${workspaceRoot}/public",
            "userDataDir": "${workspaceRoot}/.vscode/chrome"
        }
    ]
}